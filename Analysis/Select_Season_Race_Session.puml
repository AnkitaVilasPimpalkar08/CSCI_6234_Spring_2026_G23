@startuml
left to right direction
allow_mixing

actor User
boundary "Session Selection View" as GUI
control "Session Controller" as CTRL
entity "Season Data" as SEASON
entity "Race Data" as RACE
entity "Session Data" as SESSION
actor "FastF1 API" as API

User -- GUI : Selects Year/Race/Session
GUI -- CTRL : Requests Data
CTRL -- API : Fetches Data (Seasons, Races, Sessions)
CTRL -- SEASON : Updates Season List
CTRL -- RACE : Updates Race List
CTRL -- SESSION : Updates Session List
@enduml
