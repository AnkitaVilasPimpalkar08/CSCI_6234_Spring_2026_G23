@startuml
allow_mixing
skinparam handwritten true
actor User
boundary "Session Selection View" as GUI
control "Session Controller" as CTRL
entity "Season Data" as SEASON
entity "Race Data" as RACE
entity "Session Data" as SESSION
actor "FastF1 API" as API

User -> GUI : Selects Year
GUI -> CTRL : REQUEST_SEASONS()
CTRL -> API : Fetch Available Seasons
API --> CTRL : Return Seasons
CTRL -> GUI : Update Season List

User -> GUI : Selects Season
GUI -> CTRL : REQUEST_RACES(season)
CTRL -> API : Fetch Races for Season
API --> CTRL : Return Races
CTRL -> RACE : Update Race List
CTRL -> GUI : Update Race List

User -> GUI : Selects Race
GUI -> CTRL : REQUEST_SESSIONS(race)
CTRL -> API : Fetch Sessions for Race
API --> CTRL : Return Sessions
CTRL -> SESSION : Update Session List
CTRL -> GUI : Update Session List

User -> GUI : Selects Session
GUI -> CTRL : SET_ACTIVE_SESSION(session)
CTRL -> SESSION : Set Current Session
@enduml
